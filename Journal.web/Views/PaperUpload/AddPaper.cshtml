@model PaperViewModel
@{
    
}


<form asp-action="AddPaper" method="post" enctype="multipart/form-data" class="form-horizontal" role="form">
    <h4>Enter your new Paper</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div style="display:inline">
        <div class="form-group">

        <label asp-for="Paper.Title_name" class="col-md-2 control-label"></label>
        <div class="col-md-3">
            <input asp-for="Paper.Title_name" class="form-control" />
            <span asp-validation-for="Paper.Title_name" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">

        <label asp-for="Paper.Abstract" class="col-md-2 control-label"></label>
        <div class="col-md-3">
            <input asp-for="Paper.Abstract" class="form-control" />
            <span asp-validation-for="Paper.Abstract" class="text-danger"></span>
        </div>
    </div>
     <div class="form-group">

        <label asp-for="Paper.Description" class="col-md-2 control-label"></label>
        <div class="col-md-3">
            <input asp-for="Paper.Description" class="form-control" />
            <span asp-validation-for="Paper.Description" class="text-danger"></span>
        </div>
    </div>
    </div>
     <div class="form-group">
        <div class="col-md-10">
            <p>Upload your File</p>
            <input  type="file" name="files" />
        </div>
    </div>

     <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Add Paper" />
        </div>
    </div>

   
   
</form>
